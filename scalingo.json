{
  "name": "Odoo",
  "description": "Odoo",
  "logo": "https://www.odoo.com/brand/x1.png",
  "repository": "https://github.com/MTES-MCT/odoo-scalingo",
  "website": "https://odoo.com",
  "stack": "scalingo-20",
  "env": {
    "wkhtmltopdf_VERSION": {
      "description": "wkhtmltopdf version",
      "value": "0.12.6",
      "required": false
    },
    "ODOO_VERSION": {
      "description": "odoo release",
      "value": "15.0",
      "required": false
    },
    "DB_PORT": {
      "description": "database port",
      "value": "5432",
      "required": true
    },
    "DB_HOST": {
      "description": "database host",
      "value": "localhost",
      "required": true
    },
    "DB_NAME": {
      "description": "database name",
      "value": "odoo",
      "required": true
    },
    "DB_USER": {
      "description": "database user",
      "value": "odoo",
      "required": true
    },
    "DB_PASSWORD": {
      "description": "database password",
      "value": "",
      "required": true
    },
    "DB_INIT": {
      "description": "database init",
      "value": "true",
      "required": false
    },
    "SMTP_PORT": {
      "description": "smtp port",
      "value": "25",
      "required": false
    },
    "SMTP_HOST": {
      "description": "smtp host",
      "value": "localhost",
      "required": false
    },
    "SMTP_USER": {
      "description": "smtp user",
      "value": "odoo",
      "required": false
    },
    "SMTP_PASSWORD": {
      "description": "smtp password",
      "value": "",
      "required": false
    },
    "SMTP_FROM": {
      "description": "email from",
      "value": "",
      "required": false
    },
    "SMTP_SSL": {
      "description": "smtp ssl",
      "value": "true",
      "required": false
    },
    "PROXY_MODE": {
      "description": "proxy mode",
      "value": "true",
      "required": false
    },
    "MAX_METASPACE_SIZE": {
      "description": "Control max memory available",
      "value": "512m"
    }
  },
  "addons": ["postgresql:postgresql-sandbox"],
  "formation": {
    "web": {
      "amount": 1,
      "size": "S"
    }
  }
}